{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build and Run",
      "type": "shell",
      "command": "make -j8 && cd ./build && RobotFlier",
      "windows": {
        "command": "make -j8 && cd ./build && RobotFlier.exe"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "make -j8",
      "problemMatcher": [
        "$gcc"
      ],
    },
    {
      "label": "Rebuild",
      "type": "shell",
      "command": "make clean && make -j8",
      "problemMatcher": [
        "$gcc"
      ],
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "cd ./build && RobotFlier",
      "windows": {
        "command": "cd ./build && RobotFlier.exe"
      },
      "problemMatcher": []
    }
  ]
}